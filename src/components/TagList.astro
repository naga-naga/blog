---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
  {
    tags.map((tag) => (
      <a href={`/tags/${tag}`}>
        <div class="tag">#{tag}</div>
      </a>
    ))
  }
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 1rem auto;
  }

  .tag {
    margin: 0.25rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid #c3c5df;
    border-radius: 0.5rem;
    background-color: #c3c5df;
    font-size: 0.9rem;
  }

  .tag:hover {
    opacity: 0.8;
  }

  a {
    color: #000000;
    text-decoration: none;
  }
</style>
